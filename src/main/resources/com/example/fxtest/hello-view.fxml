<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fxtest.VGSController">
    <padding>
        <Insets bottom="0.0" left="00.0" right="900.0" top="00.0"/>
<!--        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>-->
    </padding>

    <Label fx:id="welcomeText"/>
    <Button fx:id="onHelloButtonClick" text="Создать случайный овощной салат " onAction="#onHelloButtonClick"/>
    <Button fx:id="AddOnionButtonClick" text="Добавить лук" onAction="#AddOnionButtonClick"/>
    <Button fx:id="addTomatoButtonClick" text="Добавить помидор" onAction="#addTomatoButtonClick"/>
    <Button fx:id="addCucumberButtonClick" text="Добавить огурец" onAction="#addCucumberButtonClick"/>
    <Button fx:id="saveSaladButtonClick" text="Сохранить в файл" onAction="#saveSaladButtonClick"/>
    <Button fx:id="readFileButtonClick" text="Открыть файл" onAction="#readFileButtonClick"/>
    <Button fx:id="saveBinarSaladButtonClick" text="Сохранить в бинарный файл" onAction="#saveBinarSaladButtonClick"/>
    <Button fx:id="readBinarFileButtonClick" text="Открыть бинарный файл" onAction="#readBinarFileButtonClick"/>


</VBox>
